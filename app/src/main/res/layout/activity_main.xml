<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkboxluu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FF33">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="6dp"
            android:text="WELLCOME"
            android:textAlignment="center"
            android:textColor="#EE1F5339"
            android:textSize="50dp">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="232dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="69dp"
                android:background="@drawable/boder"
                android:hint="username"
                android:textAlignment="center"
                android:textColorHint="#EE022302"
                android:textSize="25dp"></EditText>

            <EditText
                android:id="@+id/pass"
                android:layout_width="232dp"
                android:layout_height="57dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="69dp"
                android:background="@drawable/boder"
                android:hint="password"
                android:password="true"
                android:textAlignment="center"
                android:textColorHint="#EE0C0C0C"
                android:textSize="25dp"></EditText>

            <RelativeLayout
                android:layout_width="401dp"
                android:layout_height="230dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp">

                <Button
                    android:id="@+id/login"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Login"
                    android:layout_marginLeft="115dp"
                    android:textColor="@color/black"
                    android:background="@drawable/boderbutton">

                </Button>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="198dp"
                android:text="luu thong tin dang nhap" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>